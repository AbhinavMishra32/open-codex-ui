{
  "name": "open-codex-ui",
  "version": "0.1.0-alpha",
  "description": "Codex-style desktop and terminal interfaces with shared agent core in a Turborepo monorepo.",
  "private": true,
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "start": "npm run dev:desktop",
    "dev:web": "turbo run dev --filter=@repo/web",
    "dev:desktop": "turbo run dev --filter=@repo/web --filter=@repo/electron --parallel",
    "dev:tui": "turbo run dev --filter=@repo/tui",
    "dev:api": "turbo run dev --filter=@repo/api",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "release:check": "node ./scripts/release/check-release-ready.mjs",
    "release:notes": "node ./scripts/release/extract-changelog.mjs v$npm_package_version"
  },
  "devDependencies": {
    "turbo": "^2.5.5",
    "typescript": "^5.3.3"
  }
}
